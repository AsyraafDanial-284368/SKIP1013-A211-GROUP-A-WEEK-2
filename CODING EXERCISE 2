package exercise2;

class PrintCheckerPattern {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.print("*\t");
		System.out.print("*\t");
		System.out.print("*\t");
		System.out.print("*\t");
		System.out.println("*\t");
		System.out.println();
		System.out.print("\t");
		System.out.print("*\t");
		System.out.print("*\t");
		System.out.print("*\t");
		System.out.print("*\t");
		System.out.println("*\t");
		System.out.println();
		System.out.print("*\t");
		System.out.print("*\t");
		System.out.print("*\t");
		System.out.print("*\t");
		System.out.println("*\t");
		System.out.println();
		System.out.print("\t");
		System.out.print("*\t");
		System.out.print("*\t");
		System.out.print("*\t");
		System.out.print("*\t");
		System.out.println("*\t");
		System.out.println();
		System.out.print("*\t");
		System.out.print("*\t");
		System.out.print("*\t");
		System.out.print("*\t");
		System.out.print("*\t");
	}

}

package exercise2;

class PrintSquarePattern {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.print("*\t");
		System.out.print("*\t");
		System.out.print("*\t");
		System.out.print("*\t");
		System.out.println("*\t");
		System.out.println();
		System.out.print("*\t");
		System.out.print("*\t");
		System.out.print("\t");
		System.out.print("*\t");
		System.out.println("*\t");
		System.out.println();
		System.out.print("*\t");
		System.out.print("*\t");
		System.out.print("\t");
		System.out.print("*\t");
		System.out.println("*\t");
		System.out.println();
		System.out.print("*\t");
		System.out.print("*\t");
		System.out.print("\t");
		System.out.print("*\t");
		System.out.println("*\t");
		System.out.println();
		System.out.print("*\t");
		System.out.print("*\t");
		System.out.print("*\t");
		System.out.print("*\t");
		System.out.println("*\t");
	}

}

package exercise2;

class PrintStarPattern {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.println("    *  ");
		System.out.println("* *   * *");
		System.out.println("   * * ");
		System.out.println(" *     *  ");
		System.out.println("*        *");

	}

}

package exercise2;

class PrintTriangularPattern {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.print("*\t\t");
		System.out.print("*\t\t");
		System.out.print("*\t\t");
		System.out.print("*\t\t");
		System.out.println("*\t");
		System.out.println();
		System.out.println();
		System.out.print("\t");
		System.out.print("*\t\t\t\t\t");
		System.out.print("\t");
		System.out.println("*\t");
		System.out.println();
		System.out.println();
		System.out.print("\t\t");
		System.out.print("*\t");
		System.out.print("\t\t\t");
		System.out.println("*\t");
		System.out.println();
		System.out.println();
		System.out.print("\t\t\t");
		System.out.print("*\t");
		System.out.print("\t");
		System.out.println("*\t");
		System.out.println();
		System.out.println();
		System.out.print("\t\t\t\t");
		System.out.println("*\t");
		
		

	}

}
